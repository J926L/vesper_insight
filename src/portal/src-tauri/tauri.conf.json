{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vesper Portal",
  "version": "0.1.0",
  "identifier": "com.vesper.insight",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vesper Insight - AI Threat Analytics",
        "width": 1000,
        "height": 700,
        "transparent": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "db": "sqlite:/home/j/projects/vesper_insight/src/brain/alerts.db"
    }
  }
}